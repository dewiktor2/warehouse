<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="css/footer-distributed.css">

    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="glyphicons glyphicons-home"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               
                
               
                <a class="navbar-brand" rel="home" href="#" > Warehouse
                    <img  style="max-width:100px; "
                         src="/Images/logo.jpg"> 
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                  
                    <li>@Html.ActionLink("Categories", "Index", "Category")</li>
                  <li> <a href="@Url.Action("Index", "Product")" class="btn-link">
                        <span class="glyphicons glyphicons-home"></span> Products
                    </a>  </li> 
                   
                    @if (User.IsInRole("Admin"))
                    {

                        <li>@Html.ActionLink("AdminPanel", "Index", "Admin")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")

            </div>
        </div>
    </div>
    </br>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="footer">
            <div class="container">
                <div class="footer-left">
                    <p class="footer-links">
                       Home <a href="@Url.Action("Index", "Home")">
                            <span class="glyphicon glyphicon-home"></span>
                        </a>
                       Contact <a href="@Url.Action("Contact", "Home")">
                                 <span class="glyphicon glyphicon-phone"></span>
                        </a>

                        About Company <a href="#">
                                  <span class="glyphicon glyphicon-pencil"></span>
                        </a>


                    </p>
                    <p>Wiktor Dębski &copy; 2015</p>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
