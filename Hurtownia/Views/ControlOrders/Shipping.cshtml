@model PagedList.IPagedList<Hurtownia.Models.OrderShipping>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Shipping";
}

<div class="page-header">
    
    
    <div class="page-header">
        <h1>  Shipping <small>address</small></h1>
    </div>
    
    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
    @using (Html.BeginForm("Shipping", "ControlOrders", FormMethod.Get))
    {
        <p>

            Find by name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as
string)
            <input type="submit" value="Search" />
        </p>
    }
</div>
    <table class="table">
        <tr>
            <th>
                UserId
            </th>
            <th>
                @Html.ActionLink("Name", "Shipping", new
        {
            sortOrder =
                ViewBag.NameSortParm
        })
            </th>
            <th>
                Surname
            </th>
            <th>
                Adres
            </th>
            <th>
                Adres1
            </th>
            <th>
                City
            </th>
            <th>
                ZipCode
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adres1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZipCode)
                </td>
                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                    </td>*@
            </tr>
        }

    </table>
    <br />
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of
    @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Shipping",
 new
 {
     page,
     sortOrder = ViewBag.CurrentSort,
     currentFilter =
         ViewBag.CurrentFilter
 }))


