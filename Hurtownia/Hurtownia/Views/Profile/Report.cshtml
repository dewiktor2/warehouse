@model Hurtownia.Models.Report

@{
    ViewBag.Title = "Report";
}

<div class="page-header">
    <h1>Report  </h1>

    
</div>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
     
        <hr />
        @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.UserId)
        @Html.HiddenFor(model => model.ReportId)
        @Html.HiddenFor(model => model.reply)
        @Html.HiddenFor(model => model.DateOfCreation)
        @Html.HiddenFor(model => model.DateOfAnwser)
        <h2>Your    <small>message</small></h2>
        <div class="form-group">
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.question, new { @class = "form-control" })
                
                @Html.ValidationMessageFor(model => model.question)
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
