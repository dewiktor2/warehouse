
@model PagedList.IPagedList<Hurtownia.Models.DeteOfCreationModelView>
@using PagedList.Mvc;
@using PagedList;

</br>
<div class="page-header">
    <h1>User <small>Statistic</small></h1>
</div>
</br>

<div class="panel panel-primary">
    <!-- Default panel contents -->
    <div class="panel-heading">Table</div>
    <div class="panel-body">




        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-lg-2">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h4 class="panel-title">Creation Time</h4>
                        </div>
                        <div class="panel-body">
                            @Html.DisplayFor(modelItem => item.CreationTime)
                        </div>
                    </div>
                </div>
                <div class="col-lg-2">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h4 class="panel-title">Users</h4>
                        </div>
                        <div class="panel-body">
                            @Html.DisplayFor(modelItem => item.UserCount)
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("About",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))

